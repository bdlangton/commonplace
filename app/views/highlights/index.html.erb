<%= content_for(:title, 'Highlights') %>
<h1>Highlights</h1>

<%= link_to 'New highlight', new_highlight_path, class: ['badge', 'badge-pill', 'badge-primary'] %>
<%= link_to 'See Deleted Highlights', highlights_deleted_path, class: ['badge', 'badge-pill', 'badge-secondary'] %>

<%= form_tag highlights_path, :method => 'get' do %>
  <p>
    <%= label_tag :tag %><br>
    <%= select_tag :tag, options_from_collection_for_select(@tags, 'title', 'title', params[:tag]), include_blank: true %>
    <%= submit_tag "Submit", :name => nil %>
  </p>
<% end %>

<%= render partial: 'highlights', locals: { highlights: @highlights } %>
<%= will_paginate @highlights, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
