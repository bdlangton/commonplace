<%= content_for(:title, 'Deleted Highlights') %>
<h1>Deleted Highlights</h1>

<%= form_tag favorites_path, :method => 'get' do %>
  <p>
    <%= label_tag :tag %><br>
    <%= select_tag :tag, options_from_collection_for_select(@tags, 'title', 'title', params[:tag]), include_blank: true %>
    <%= submit_tag "Submit", :name => nil %>
  </p>
<% end %>

<%= render partial: 'highlights', locals: { highlights: @highlights } %>
<%= will_paginate @highlights, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
