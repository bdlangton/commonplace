<%= content_for(:title, 'Tag: ' + @tag.title) %>
<h1><%= @tag.title %></h1>
 
<%= link_to 'Edit Tag', edit_tag_path(@tag), class: ['badge', 'badge-pill', 'badge-light'] %>

<%= form_tag({}, :method => 'get', :class => 'filter-form') do %>
  <%= label_tag :favorite %><br>
  <%= check_box_tag :favorite, '1', params[:favorite] %>
  <%= submit_tag "Filter", :name => nil %>
<% end %>

<%= render partial: 'highlights/highlights', locals: { highlights: @highlights } %>
