<h1>Listing tags</h1>
<%= link_to 'New tag', new_tag_path %>
<%= link_to 'Home', welcome_index_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Operations</th>
  </tr>
 
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.title %></td>
      <td><%= link_to 'Show', tag_path(tag) %>
        <%= link_to 'Edit', edit_tag_path(tag) %>
        <%= link_to 'Destroy', tag_path(tag),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
