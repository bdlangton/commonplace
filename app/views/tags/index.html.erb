<%= content_for(:title, 'Tags') %>
<h1>Tags</h1>

<%= link_to 'New tag', new_tag_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Operations</th>
  </tr>
 
  <% @tags.each do |tag| %>
    <tr>
      <td><%= link_to tag.title, tag_path(tag) %></td>
      <td>
        <%= link_to 'Edit', edit_tag_path(tag) %>
        <%= link_to 'Destroy', tag_path(tag),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
