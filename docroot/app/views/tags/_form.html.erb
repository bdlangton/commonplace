<%= form_with model: @tag, local: true do |form| %>
 
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tag.errors.count, "error") %> prohibited
        this tag from being saved:
      </h2>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= label_tag(:title) %><br>
    <%= form.text_field :title, class: 'form-control', id: 'title' %>
  </p>

  <p>
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </p>

  <p>
    <%= form.submit 'Save Tag', {class: ['btn', 'btn-primary']} %>
    <%= form.button 'Back', {class: ['btn']} %>
  </p>
 
<% end %>
