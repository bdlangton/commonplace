<% if !tags.empty? %>
  <table class="tags">
    <caption>Tags</caption>
    <thead>
      <tr>
        <th class="title">Title</th>
        <th class="operations">Operations</th>
      </tr>
    </thead>

    <tbody>
      <% tags.each do |tag| %>
        <tr>
          <td class="title">
            <%=
              link_to(
                raw(tag.title + ' ' + content_tag(:span, tag.count, class: ['badge', 'badge-pill', 'badge-light'])),
                tag_path(tag),
                id: 'tag-' + tag.id.to_s,
                class: ['badge', 'badge-pill', 'badge-success', 'tag']
              )
            %>
          </td>
          <td class="operations">
            <%= link_to fa_icon('pencil'), edit_tag_path(tag), id: 'edit-tag-' + tag.id.to_s, class: ['edit'] %>
            <%= link_to fa_icon('ban'), tag_path(tag),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  id: 'delete-tag-' + tag.id.to_s,
                  class: ['delete', 'gray'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

